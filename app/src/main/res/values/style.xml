<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Core" />

    <style name="Core.Style" />

    <style name="Core.Style.Button">
        <item name="android:background">@drawable/bg_button_round_shadowy</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:radius">100dp</item>
    </style>

    <style name="Core.Style.Text"/>

    <style name="Core.Style.Text.Tittle">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Core.Style.Text.Subtitle">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Core.Style.Text.Edit">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Core.Style.Toolbar">
        <item name="android:background">@color/colorToolBar</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Core.Style.DatePickerDialog">
        <item name="android:background">@color/colorToolBar</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Core.Style.ItemBackground">
        <item name="android:background">@drawable/bg_field_day</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

     <style name="Core.Style.DropDownSpinner">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- Dark mode -->
    <style name="Core.Style.Night" />

    <style name="Core.Style.Night.Button">
        <item name="android:background">@drawable/bg_button_round_shadowy</item>
        <item name="backgroundTint">@color/primaryLightColor</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:radius">100dp</item>
    </style>

    <style name="Core.Style.Night.Text"/>

    <style name="Core.Style.Night.Text.Tittle">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Core.Style.Night.Text.Subtitle">
        <item name="android:textColor">@color/colorDivider</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Core.Style.Night.Text.Edit">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Core.Style.Night.Toolbar">
        <item name="android:background">@color/colorLightGrape</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Core.Style.Night.DatePickerDialog">
        <item name="android:background">@color/colorLightGrape</item>
        <item name="android:windowBackground">@color/colorDarkGrape</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="Core.Style.Night.ItemBackground">
        <item name="android:background">@drawable/bg_field_night</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Core.Style.Night.DropDownSpinner">
        <item name="android:background">@null</item>
        <item name="android:popupBackground">@color/colorLightGrape</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>