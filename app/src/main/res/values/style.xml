<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Core" />

    <style name="Core.Style" />

    <style name="Core.Style.Button">
        <item name="android:background">@drawable/bg_button_round_shadowy</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:radius">100dp</item>
    </style>

    <style name="Core.Style.Text"/>

    <style name="Core.Style.Text.Tittle">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Core.Style.Text.Subtitle">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Core.Style.Text.Normal">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>